{
  "name": "assistant",
  "version": "0.0.2",
  "description": "",
  "main": "./dist/slack.app.js",
  "bin": "./dist/slack.app.js",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsx   --env-file=.env src/slack.app.ts",
    "web": "tsx --env-file=.env src/web.app.tsx",
    "gateway": "tsx --env-file=.env src/gateway.mcp.server.ts",
    "gateway:client": "tsx --env-file=.env src/gateway.dashboard.tsx",
    "build:mta": "mbt build -p=cf",
    "build": "npm run build:pkgroll",
    "deploy": "cf deploy mta_archives/assistant_0.0.1.mtar -f --retries 1",
    "build:pkgroll": "pkgroll  --clear-dist --dist ./dist --shims  --treeshake   --target=node22.13.1",
    "push-env": "./push-env.sh",
    "build:copypackage": "cp package.json ./dist/ && cp package-lock.json ./dist/ || true",
    "build:tsup": "pnpx tsup ./src/slack.app.ts --outDir ./dist --target=esnext --format esm --treeshake --shims --publicDir ",
    "start": "node ./dist/slack.app.cjs",
    "start:gateway": "node ./dist/gateway.mcp.server.cjs",
    "start:gateway:client": "node ./dist/gateway.dashboard.cjs",
    "node-with-import": "node --import ./start.js /.main.mjs",
    "inspector": "npx @modelcontextprotocol/inspector  "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@ai-sdk/azure": "^1.3.23",
    "@hocuspocus/provider": "^3.1.1",
    "@hono/node-server": "^1.14.1",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "@slack/bolt": "^4.3.0",
    "@statelyai/inspect": "^0.4.0",
    "@xstate/store": "^3.6.2",
    "ai": "^4.3.15",
    "fetch-to-node": "^2.1.0",
    "hono": "^4.7.9",
    "lucide-react": "^0.509.0",
    "openai": "^4.97.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "slack-edge": "^1.3.8",
    "xstate": "^5.19.2",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.26"
  },
  "devDependencies": {
    "@cxai/stream": "^1.0.20",
    "@types/node": "^20.11.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.6",
    "tsx": "^4.19.4"
  },
  "engines": {
    "yarn": "1.22.22",
    "node": "22.13.1"
  },
  "overrides": {
    "yjs": {
      "dependencies": {
        "y-protocols": "^1.0.6"
      },
      "main": "./dist/yjs.cjs",
      "module": "./dist/yjs.mjs",
      "exports": {
        ".": {}
      }
    }
  },
  "exports": {
    ".": {
      "require": "./dist/slack.app.cjs",
      "import": "./dist/slack.app.mjs",
      "bin": "./dist/slack.app.js"
    },
    "./web": {
      "require": "./dist/web.app.cjs",
      "import": "./dist/web.app.mjs",
      "bin": "./dist/web.app.js"
    },
    "./gateway": {
      "require": "./dist/gateway.mcp.server.cjs",
      "import": "./dist/gateway.mcp.server.mjs",
      "bin": "./dist/gateway.mcp.server.js"
    },
    "./mcp.dashboard": {
      "require": "./dist/gateway.dashboard.cjs",
      "import": "./dist/gateway.dashboard.mjs",
      "bin": "./dist/gateway.dashboard.js"
    }
  }
}
